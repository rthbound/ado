<p id="notice"><%= notice %></p>

<h1>Doings History</h1>

<table class='ui single line table'>
  <thead>
    <tr>
      <th>Duration in minutes</th>
      <th>Thing</th>
      <th>Done at</th>
      <th>Done by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doings.each do |doing| %>
      <tr>
        <td><%= doing.duration_in_minutes %></td>
        <td><%= doing.thing.title %></td>
        <td><%= doing.done_at %></td>
        <td><%= doing.user&.email %></td>
        <td><%= link_to 'Show', doing %></td>
        <td><%= link_to 'Edit', edit_doing_path(doing) %></td>
        <td><%= link_to 'Destroy', doing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
